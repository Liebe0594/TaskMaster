<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#4A00B7"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <CheckBox
            android:id="@+id/checkBoxTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:minWidth="0dp"
            android:minHeight="0dp"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Título de la tarea"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTaskDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha límite: 2025-09-25"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivPriority"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Prioridad"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivDeleteTask"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Eliminar tarea"
            android:src="@drawable/ic_delete"
            android:tint="@android:color/holo_red_light"
            tools:ignore="UseAppTint" />

    </LinearLayout>
</androidx.cardview.widget.CardView>